/* pages/index/pt-item/pt-item.wxss */
.pt-item{
  width: 100%;
  height: 100%;
  position: relative;
}
.hover{
  background: var(--bg-3);
}
.deactive .number{
  color: var(--ele-dis-color) !important;
}
.deactive .symbol{
  color: var(--ele-dis-color) !important;
}
.deactive .name{
  color: var(--ele-dis-color) !important;
}
.deactive .color-view{
  background: var(--ele-dis-color) !important;
}

/* 正常情况 */
.number{
  width: 100%;
  height: 17px;
  font-size: 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-left: 4px;
}
.number-group{
  width: 100%;
  height: 17px;
  font-size: 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-left: 4px;
}
.symbol{
  width: 100%;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-size: 21px;
}
.symbol-group{
  width: 100%;
  height: 14px;
  line-height: 14px;
  font-size: 10px;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding-left: 4px;
}
.name{
  width: 100%;
  height: 12px;
  line-height: 12px;
  margin-bottom:3px;
  box-sizing: border-box;
  text-align: center;
  font-size: 10px;
  
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.color{
  width: 100%;
  height: 2px;
  padding-left: 1px;
  padding-right: 1px;
  box-sizing: border-box;
}
.radioactive{
  position: absolute;
  top: 3px;
  right: 3px;
  background: var(--fg);
  width: 4px;
  height: 4px;
  border-radius: 50%;
}