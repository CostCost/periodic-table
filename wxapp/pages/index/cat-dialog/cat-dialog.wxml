      </view>
      <view class="category-dialog-btn" hover-class="hover" data-category="K" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:{{colors['K']}}"></view>
        <view class="category-dialog-btn-text">锕系金属</view>
      </view>
    </view>
    <view class="category-dialog-menu-row">
      <view class="category-dialog-btn" hover-class="hover" data-category="L" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:{{colors['L']}}"></view>
        <view class="category-dialog-btn-text">超锕系元素</view>
      </view>
      <view class="category-dialog-btn" hover-class="hover" data-category="" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:linear-gradient({{colors['G']}}, {{colors['E']}});"></view>
        <view class="category-dialog-btn-text">全部元素</view>
      </view>
    </view>
