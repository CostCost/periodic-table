        <view class="category-dialog-btn-text">其他非金属</view>
      </view>
      <view class="category-dialog-btn" hover-class="hover" data-category="I" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:{{colors['I']}}"></view>
        <view class="category-dialog-btn-text">稀有气体</view>
      </view>
    </view>
    <view class="category-dialog-menu-row">
      <view class="category-dialog-btn" hover-class="hover" data-category="A" bindtap="itemClick">
