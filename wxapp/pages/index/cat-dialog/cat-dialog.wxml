        <view class="category-dialog-btn-text">类金属</view>
      </view>
      <view class="category-dialog-btn" hover-class="hover" data-category="H" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:{{colors['H']}}"></view>
        <view class="category-dialog-btn-text">卤素</view>
      </view>
    </view>
    <view class="category-dialog-menu-row">
      <view class="category-dialog-btn" hover-class="hover" data-category="D" bindtap="itemClick">
        <view class="category-dialog-btn-color" style="background:{{colors['D']}}"></view>
        <view class="category-dialog-btn-text">后过渡金属</view>
      </view>
