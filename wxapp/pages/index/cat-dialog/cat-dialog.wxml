<view class="mask" catchtouchstart="touchMask"></view>
<view class="category-dialog">
  <view class="category-dialog-title">分类</view>
  <view class="category-dialog-menu">
    <view class="category-dialog-menu-row">
      <view class="category-dialog-btn" hover-class="hover" data-category="G" bindtap="itemClick">
