.page {
  width: 100vw;
  height: 100vh;
  overflow: hidden; }

.scroll-view {
  width: 100vw;
  height: 100vh;
  overflow: scroll;
  -webkit-overflow-scrolling: touch; }

.ptable {
  display: inline-flex; }

.left-bar {
  width: 18px;
  background: var(--pg);
  position: sticky;
  left: 0;
  z-index: 10;
  padding-top: 18px;
  display: flex;
  flex-direction: column; }

.right .top-bar {
  width: 100%;
  height: 18px;
  background: var(--pg);
  position: sticky;
  top: 0;
  z-index: 9;
  padding-left: 4px;
  padding-right: 4px;
  display: flex;
  flex-direction: row;
  box-sizing: border-box; }

.right .content {
  z-index: 8; }
  .right .content .row {
    display: flex;
    flex-direction: row; }
    .right .content .row .col {
      height: 60px;
      width: 60px; }
      .right .content .row .col:first-child {
        margin-left: 4px; }
      .right .content .row .col:last-child {
        margin-right: 4px; }

.bar-text {
  font-size: 12px;
  text-align: center;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center; }

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent; }

.category-group {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 11;
  pointer-events: none; }

.category-btn {
  background: var(--bg-3);
  width: 52px;
  height: 52px;
  border-radius: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  pointer-events: auto; }
