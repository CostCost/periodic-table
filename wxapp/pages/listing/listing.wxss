.page {
  width: 100%;
  height: 100%; }
  .page .top-bar {
    border-bottom: 1px solid var(--fg-3);
    padding: 16px;
    display: flex;
    align-items: center; }
    .page .top-bar .left {
      flex: 1;
      font-size: 15px;
      display: flex;
      flex-direction: row;
      align-items: center; }
      .page .top-bar .left .colorc {
        background: #ffffff;
        border-radius: 50%;
        width: 12px;
        height: 12px;
        margin-right: 12px; }
    .page .top-bar .right {
      display: flex;
      justify-content: center;
      align-items: center; }
  .page .top-bar-hover {
    background: var(--fg-3); }
  .page .scroll-view {
    position: fixed;
    top: 64px;
    left: 0;
    right: 0;
    bottom: 0; }

.drop-menu-item {
  display: flex;
  align-items: center;
  width: 170px;
  min-height: 34px; }
  .drop-menu-item .colorc-l {
    background: #ffffff;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    margin-right: 12px; }

.item-content {
  width: 100%;
  height: 100%;
  font-size: 16px; }

.icon {
  width: 100%;
  height: 100%;
  padding-left: 3px;
  padding-right: 3px;
  padding-top: 6px; }

.progress {
  position: absolute;
  left: 0;
  top: 0;
  width: 40%;
  height: 100%;
  background: #0f0f0f; }

.text {
  padding-left: 14px; }
