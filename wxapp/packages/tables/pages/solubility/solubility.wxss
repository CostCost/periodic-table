    color: #ff201e; }
  .col.status-can {
    border-color: #25c168;
    color: #25c168; }
  .col.status-lite {
    border-color: #f5be25;
    color: #f5be25; }
  .col.status-swift {
    border-color: #029ae4;
    color: #029ae4; }
  .col.status-null {
