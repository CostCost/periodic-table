    color: var(--fg-2); }

.tool {
  display: inline-flex;
  flex-direction: row; }
  .tool .col {
    background: var(--bg); }
  .tool .btn {
    line-height: 38px;
    font-size: 13px;
    padding-left: 8px;
    padding-right: 8px; }
  .tool .btn-hover {
    background: var(--fg-3); }
