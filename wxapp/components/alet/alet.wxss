.adlet {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1px solid var(--fg-3);
  padding: 26px 20px;
  overflow: hidden;
  position: relative;
  opacity: 1;
  animation-delay: 400ms;
  animation-timing-function: linear;
  animation-fill-mode: forwards; }
  .adlet .bgt {
    position: absolute;
    font-size: 56px;
    line-height: 56px;
    color: var(--fg-3);
    font-weight: bold; }
  .adlet .bgt.bgt1 {
    left: -2%;
    top: 0%; }
  .adlet .bgt.bgt2 {
    right: -2%;
    bottom: 0%; }
  .adlet .text {
    font-size: 16px;
    padding-left: 40px;
    padding-right: 40px;
    text-align: center; }
  .adlet .btns {
    display: flex;
    flex-direction: row;
    margin-top: 12px; }
    .adlet .btns .btn {
      width: 92px;
      padding-left: 0px;
      padding-right: 0px;
      font-size: 14px;
      margin: 0;
      color: #ffffff;
      border-radius: 3px; }
    .adlet .btns .btn + .btn {
      margin-left: 12px; }
    .adlet .btns .btn.cancel {
      background: #6a6b6f; }
    .adlet .btns .btn.ok {
      background: #0b9148; }
